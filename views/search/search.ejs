<!DOCTYPE html>
<html>
     <% include ../partials/head %>
  <body>
     <% include ../partials/nav %>
<% results.forEach( result => { %>

      <h3>Search not found</h3>

        <h3>Results for <span style="color : red" <%= q %></span></h3>
        <div class="row">
        
                <div class="col">      
                    <div class="card" style="width: 18rem;">
                        <a href=""> 
                        <img class="card-img-top" src="<%= result._source.image %>" alt="Card image cap" />
                        </a> 
                        <div class="card-body">
                            <h5 class="card-title">Name: <%= result._source.name %> </h5>
                            <p class="card-text">Category: <%= result._source.category.name %> </p>
                            <p class="card-text">$  <%= result.price %></p>
                            <a href="/api/product/<%= result._id %>" class="btn btn-primary">Shop</a>
                        </div>
                    </div>
                </div>
 <% }) %>
        </div>

  </body>
</html>